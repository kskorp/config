# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/                           controllers.Application.index
GET		/list						controllers.Application.list
GET		/create						controllers.Application.create
GET		/edit/:ref					controllers.Application.edit(ref: Long)
POST    /edit/:ref		    		controllers.Application.editpost(ref: Long)
GET		/del/:ref					controllers.Application.delete(ref: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
